{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Debug",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build", "${workspaceRoot}/source/App/App.csproj",
                "--output", "${workspaceRoot}/build/bin/",
                "--configuration", "Debug",
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "label": "build Release",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build", "${workspaceRoot}/source/App/App.csproj",
                "--output", "${workspaceRoot}/build/bin/",
                "--configuration", "Release",
            ],
        },
        {
            "label": "publish",
            "type": "shell",
            "dependsOn": "build Release",
            "command": "(Get-Content -Raw .vscode/publish.json | ConvertFrom-Json).platforms | ForEach-Object { dotnet publish source/App/App.csproj --configuration Release --runtime $_ --output publish/$_ --self-contained /p:DebugType=None /p:DebugSymbols=false /p:PublishSingleFile=true /p:IncludeNativeLibrariesForSelfExtract=true }",
            "problemMatcher": "$msCompile",
        },
        {
            "label": "unit tests",
            "type": "shell",
            "command": "Get-ChildItem -Path ./source/ -Recurse -Filter *Tests.csproj | ForEach-Object { $job = Start-Job -ScriptBlock { param($projectPath) & dotnet test $projectPath } -ArgumentList $_.FullName; Wait-Job $job; Receive-Job $job | Select-Object -Last 1; Remove-Job $job }",
            "problemMatcher": "$msCompile",
        },
        {
            "label": "unit tests Debug",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build Debug",
                "unit tests",
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "label": "unit tests Release",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build Release",
                "unit tests",
            ],
            "problemMatcher": "$msCompile",
        },
    ]
}
